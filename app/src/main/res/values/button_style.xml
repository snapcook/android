<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SnapcookButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:includeFontPadding">false</item>
        <item name="rippleColor">#40FFFFFF</item>
        <item name="cornerRadius">@dimen/dimen_8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">42dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SnapcookButton.LessRadius" parent="SnapcookButton">
        <item name="android:background">@drawable/bg_button_radius_small</item>
    </style>

</resources>
